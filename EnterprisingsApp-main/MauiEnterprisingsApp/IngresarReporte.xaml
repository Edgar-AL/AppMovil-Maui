<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEnterprisingsApp.IngresarReporte"
             Title="Ingresar Reporte">

    <VerticalStackLayout Padding="20">

        <Label Text="El proceso de verificación es esencial para garantizar la exactitud y validez de los datos presentados, así como para asegurar la transparencia y la integridad en nuestras operaciones."
               FontSize="18"
               VerticalOptions="Start"/>

        <Label Text="Escribe tu reporte:"
               FontSize="18"
               VerticalOptions="Start"
               Margin="0,20,0,0"/>

        <Editor x:Name="txtReporteEditor"
                Placeholder="Escribe aquí..."
                FontSize="18"
                HeightRequest="200"
                VerticalOptions="FillAndExpand"/>

        <Button x:Name="btnEnviarReporte"
                Text="Enviar Reporte"
                FontSize="18"
                VerticalOptions="End"
                Clicked="btnEnviarReporte_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
