<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEnterprisingsApp.ObtenerHistorialPedidosPorEmprendedor"
             Title="ObtenerHistorialPedidosPorEmprendedor">

    <CollectionView SelectionMode="Multiple"
            ItemsSource="{Binding listaHistorialPedidosPorEmprendedor}">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Frame Margin="20"
                   BorderColor="Azure"
                   CornerRadius="5"
                   HasShadow="True"
                   HeightRequest="100"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">

                        <Frame.Background>
                            <LinearGradientBrush EndPoint="1,0">
                                <GradientStop Offset="0" Color="blue"/>
                                <GradientStop Offset="1" Color="black"/>
                            </LinearGradientBrush>
                        </Frame.Background>

                        <VerticalStackLayout>
                            <Label x:Name="lblEmprendedor"
                           FontSize="15"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           Text="{Binding nombreProducto}"/>

                            <Label x:Name="lblFechaActualizacion"
                           FontSize="15"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           Text="{Binding fechaActualizacion}"/>

                            <Label x:Name="lblEstado"
                           FontSize="15"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           Text="{Binding estadoDescripcion}"/>
                        </VerticalStackLayout>

                    </Frame>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>